<Window x:Class="Manager.UI.Dialogs.SelectDateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор даты" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
			<Button Margin="2" Content="ОК" Click="buttonOkClick"/>
			<Button Margin="2" Content="Отмена" Click="buttonCancelClick"/>
		</StackPanel>
		<DatePicker Name="_datePicker" Margin="5" />
	</DockPanel>
</Window>
