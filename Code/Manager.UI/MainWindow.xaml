<Window x:Class="Manager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер" Height="450" Width="800" Loaded="mainWindowLoaded">
	<TabControl>
		<TabItem Header="Персонал">
			<DataGrid Name="gridEmployees" AutoGenerateColumns="False">
				<DataGrid.Columns>
					<DataGridTextColumn MinWidth="150" Header="Имя" Binding="{Binding Path=Name}" />
					<DataGridTextColumn MinWidth="075" Header="Возраст" Binding="{Binding Path=AgeString}" />
					<DataGridTextColumn MinWidth="250" Header="Классификация" Binding="{Binding Path=ClassificationString}" />
				</DataGrid.Columns>
			</DataGrid>
		</TabItem>
	</TabControl>
</Window>
